local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local humanoid = char:WaitForChild("Humanoid")
local uis = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- Criar GUI
local gui = Instance.new("ScreenGui")
gui.Name = "SpeedMenuBrainrot"
gui.ResetOnSpawn = false
gui.Parent = playerGui

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 255, 0, 110)
main.Position = UDim2.new(0, 80, 0, 200)
main.BackgroundColor3 = Color3.fromRGB(34,34,34)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = false
main.Parent = gui

-- üõ©Ô∏è Fly
local flyAtivo = false
local bv, bg

local function ativarFly()
	if flyAtivo then
		flyAtivo = false
		if bv then bv:Destroy() end
		if bg then bg:Destroy() end
	else
		flyAtivo = true
		bv = Instance.new("BodyVelocity", hrp)
		bg = Instance.new("BodyGyro", hrp)

		bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
		bg.MaxTorque = Vector3.new(1e9, 1e9, 1e9)
		bv.Velocity = Vector3.zero
		bg.CFrame = hrp.CFrame

		RunService.RenderStepped:Connect(function()
			if flyAtivo then
				bv.Velocity = Vector3.new(0, 0, 0)
				if uis:IsKeyDown(Enum.KeyCode.W) then
					bv.Velocity = hrp.CFrame.LookVector * 80
				elseif uis:IsKeyDown(Enum.KeyCode.S) then
					bv.Velocity = -hrp.CFrame.LookVector * 80
				elseif uis:IsKeyDown(Enum.KeyCode.Space) then
					bv.Velocity = Vector3.new(0, 80, 0)
				elseif uis:IsKeyDown(Enum.KeyCode.LeftShift) then
					bv.Velocity = Vector3.new(0, -80, 0)
				end
				bg.CFrame = hrp.CFrame
			end
		end)
	end
end

-- üö™ NoClip
local noclipAtivo = false
RunService.Stepped:Connect(function()
	if noclipAtivo and char then
		for _, part in pairs(char:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = false
			end
		end
	end
end)

local function ativarNoClip()
	noclipAtivo = not noclipAtivo
end

-- Criar os bot√µes
local btnFly = criarBotao("Ativar Fly", 0.1)
btnFly.MouseButton1Click:Connect(function()
	ativarFly()
	btnFly.Text = flyAtivo and "Desativar Fly" or "Ativar Fly"
end)

local btnNoclip = criarBotao("Ativar NoClip", 0.2)
btnNoclip.MouseButton1Click:Connect(function()
	ativarNoClip()
	btnNoclip.Text = noclipAtivo and "Desativar NoClip" or "Ativar NoClip"
end)
